<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:paddingHorizontal="16dp"
    android:gravity="center_vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/item_monthly_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Spotify"
        style="@style/TextAppearance.AppCompat.Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/item_monthly_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:elevation="2dp"
        app:layout_constraintEnd_toStartOf="@id/item_monthly_date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2200"
        />
    <ImageView
        android:contentDescription="@string/edit_date_desc"
        android:id="@+id/item_monthly_date"
        android:layout_width="25dp"
        android:src="@drawable/ic_baseline_date_range_24"
        android:layout_height="25dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@id/item_monthly_remove"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />
    <ImageView
        android:contentDescription="@string/remove_desc"
        android:id="@+id/item_monthly_remove"
        android:layout_width="25dp"
        android:src="@drawable/ic_baseline_clear_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="25dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>