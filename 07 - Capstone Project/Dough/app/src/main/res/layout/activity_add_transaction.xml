<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.AddTransactionActivity">
        
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.225"
            />

        <TextView
            android:id="@+id/transaction_type_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/add_transaction_style"
            android:text="@string/type_label" />

        <Spinner
            android:id="@+id/transaction_type_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/input_text_style"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toTopOf="@id/transaction_type_label"
            app:layout_constraintBottom_toBottomOf="@id/transaction_type_label"
            />
        <TextView
            android:id="@+id/transaction_amount_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/transaction_type_label"
            style="@style/add_transaction_style"
            android:text="@string/amount_label" />
        <EditText
            android:id="@+id/transaction_amount_edit_text"
            android:layout_height="wrap_content"
            android:layout_width="@dimen/edit_text_edge_length"
            style="@style/input_text_style"
            android:fadingEdgeLength="@dimen/edit_text_edge_length"
            app:layout_constraintTop_toTopOf="@id/transaction_amount_label"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintBottom_toBottomOf="@id/transaction_amount_label"
            android:inputType="numberDecimal"
            />
        <TextView
            android:id="@+id/transaction_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/transaction_amount_label"
            style="@style/add_transaction_style"
            android:text="@string/date_label"/>
        <Button
            android:id="@+id/transaction_date_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:elevation="2dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:layout_constraintTop_toTopOf="@id/transaction_date_label"
            app:layout_constraintTop_toBottomOf="@id/transaction_date_label"
            app:layout_constraintStart_toEndOf="@id/guideline"
            />
        <TextView
            android:id="@+id/warning_message"
            android:layout_width="200dp"
            android:visibility="invisible"
            android:layout_height="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_button"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/subsctiption_message"/>
        <TextView
            android:id="@+id/transaction_category_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/transaction_date_button"
            style="@style/add_transaction_style"
            android:text="@string/category_label"/>
        <Spinner
            android:id="@+id/transaction_category_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toTopOf="@id/transaction_category_label"
            app:layout_constraintBottom_toBottomOf="@id/transaction_category_label"
            android:textSize="16sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            />
        <Button
            android:id="@+id/add_category_button"
            android:layout_width="70dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/transaction_category_spinner"
            app:layout_constraintTop_toTopOf="@id/transaction_category_spinner"
            app:layout_constraintBottom_toBottomOf="@id/transaction_category_spinner"
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="@string/category_add_button"
            android:layout_height="45dp" />

        <EditText
            android:id="@+id/new_category_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/transaction_category_spinner"
            app:layout_constraintTop_toTopOf="@id/transaction_category_spinner"
            app:layout_constraintBottom_toBottomOf="@id/transaction_category_spinner"
            />

        <Button
            android:id="@+id/add_button"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="@string/add_label"
            app:layout_constraintTop_toBottomOf="@id/transaction_category_spinner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="36dp"
            style="@style/Widget.AppCompat.Button.Colored" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <FrameLayout
        android:id="@+id/category_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="bottom"/>
</FrameLayout>