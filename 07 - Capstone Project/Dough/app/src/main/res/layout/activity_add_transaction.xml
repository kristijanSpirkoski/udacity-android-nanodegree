<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddTransactionActivity">

    <Spinner
        android:id="@+id/transaction_type_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="48dp"
        style="@style/add_transaction_style"
        />
    <EditText
        android:id="@+id/transaction_amount_edit_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/transaction_type_spinner"
        app:layout_constraintLeft_toLeftOf="@id/transaction_type_spinner"
        android:hint="@string/amount_hint"
        android:inputType="numberDecimal"
        />
    <TextView
        android:id="@+id/transaction_date_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/transaction_amount_edit_text"
        app:layout_constraintLeft_toLeftOf="@id/transaction_amount_edit_text"
        />
    <ImageView
        android:id="@+id/edit_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/transaction_date_view"
        app:layout_constraintBottom_toBottomOf="@id/transaction_date_view"
        app:layout_constraintLeft_toRightOf="@id/transaction_date_view"
        android:contentDescription="@string/edit_img_content_desc"
        android:src="@drawable/ic_baseline_edit_24"
        app:layout_constraintHorizontal_chainStyle="packed" />
        


</androidx.constraintlayout.widget.ConstraintLayout>